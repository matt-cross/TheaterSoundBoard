<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.dragolon28</groupId>
  <artifactId>SoundBoard</artifactId>
  <version>test</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.dragolon28.soundboard.SoundBoardUI</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.github.akman</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>0.1.5</version>
        <configuration>
          <dest>target/jpackage</dest>
          <name>SoundBoard</name>
          <type>IMAGE</type>
          <input>target</input>
          <mainjar>SoundBoard-test.jar</mainjar>
          <mainclass>com.dragolon28.soundboard.SoundBoardUI</mainclass>
          <appversion>1.0</appversion>
          <copyright>Copyright (c) Zachary B Cross</copyright>
          <description>ASD Theater Soundboard</description>
          <vendor>Octobi28</vendor>
          <arguments />
          <javaoptions>--enable-native-access=ALL-UNNAMED</javaoptions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.release>23</maven.compiler.release>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <exec.mainClass>com.dragolon28.soundboard.SoundBoardUI</exec.mainClass>
  </properties>
</project>
